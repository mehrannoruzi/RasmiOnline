@model SendMessageModel

@{ Layout = null; }

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">@LocalMessage.SendMessage</h3>
                <small class="card-subtitle">@LocalMessage.SendMessageToUserDescription</small>
            </div>
            <div class="card-block">
                <form id=@($"{nameof(Message)}_FormControls") data-submit-action="@Url.Action(MVC.Message.ActionNames.Submit, MVC.Message.Name)" class="col-12">
                    <div class="row">

                        <div class="col-sm-6 m-b-20">
                            <div class="form-group" dir="rtl">
                                @Html.LabelFor(x => x.MessagingType)
                                <div class="select">
                                    @Html.DropDownListFor(x => x.MessagingType, (List<SelectListItem>)ViewBag.MessageTypes, new { @class = "form-control" })
                                    <i class="form-group__bar"></i>
                                    <small class="text-danger"> @Html.ValidationMessageFor(x => x.MessagingType) </small>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6 m-b-20" dir="rtl">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Reciver)
                                @Html.TextBoxFor(x => x.Reciver, null, new { @class = "form-control ltr-dir" })
                                <i class="form-group__bar"></i>
                            </div>
                            <small class="text-danger"> @Html.ValidationMessageFor(x => x.Reciver) </small>
                        </div>

                        <div class="col-sm-12 m-b-20" dir="rtl">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Message)
                                @Html.TextAreaFor(x => x.Message,5, 10, new { @class = "form-control",@placeholder="اینجا بنویسید" })
                                <i class="form-group__bar"></i>
                                <span class="word-counter-tarea">0 حرف مانده</span>
                            </div>
                            <small class="text-danger"> @Html.ValidationMessageFor(x => x.Message) </small>
                        </div>

                    </div>
                </form>
                <div class="col-sm-12 text-left">

                    <button id="btnSubmitForm" class="btn-action rtl waves-effect">
                        <div class="text">
                           @LocalMessage.Send
                        </div>
                        <div class="icon">
                            <i class="zmdi zmdi-mail-send rotate-180"></i>
                        </div>
                    </button>
                </div>
            </div>
        </div>

       @{Html.RenderAction(MVC.Message.ActionNames.GetList);}

    </div>
</div>